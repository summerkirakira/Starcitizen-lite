<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:padding="5dp"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">
    <ImageView
            android:layout_width="177dp"
            android:layout_height="100dp"
            android:id="@+id/detail_imageview"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_launcher_background" />
    <TextView android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:textColor="?attr/textFillColor"
              android:id="@+id/detail_title"
              android:textSize="18sp"
              android:ellipsize="end"
              android:textStyle="bold"
              android:singleLine="false"
              android:maxLines="2"
              app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginStart="5dp"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintStart_toEndOf="@+id/detail_imageview"
              tools:text="RADEGAST WHISKEY 2947 LIMITED EDITION" />
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="?attr/textFillColor"
              app:layout_constraintStart_toStartOf="@+id/detail_title"
              app:layout_constraintTop_toBottomOf="@+id/detail_title"
              android:id="@+id/detail_kind"
              android:layout_marginTop="8dp"
              tools:text="FPS Equipment"
              android:textSize="14sp" />
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="?attr/textFillColor"
              app:layout_constraintStart_toStartOf="@+id/detail_title"
              app:layout_constraintTop_toBottomOf="@+id/detail_kind"
              android:id="@+id/detail_subtitle"
              android:layout_marginTop="8dp"
              tools:text="Klaus &amp; Werner (KLWE)"
              android:textSize="14sp" />





</androidx.constraintlayout.widget.ConstraintLayout>