<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="hanger_tag">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">4dp</item>
        <item name="android:visibility">gone</item>
    </style>
    <style name="main_page_icon">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:autoSizeMinTextSize">6dp</item>
        <item name="android:textColor">@color/avatar_left_line</item>
    </style>
    <style name="main_page_image">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
    </style>
    <style name="main_fragment_icon_layout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="personal_detail_info">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:textColor">@color/avatar_left_line</item>
    </style>
    <style name="personal_info_divider">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/personal_info_divider</item>
        <item name="android:layout_marginStart">25dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:layout_height">1dp</item>
    </style>
    <style name="shop_item_price_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/textFillColor</item>
        <item name="android:textSize">23sp</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">serif</item>
    </style>
    <style name="shop_item_dollar_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/textFillColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">serif</item>
    </style>
    <style name="drawer_top_text_value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/drawer_top_info_value_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
<!--        <item name="android:fontFamily">casual</item>-->
    </style>
    <style name="drawer_option_content_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:textColor">@color/drawer_options_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="drawer_option_content_img">
        <item name="android:layout_margin">15dp</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
    </style>
    <style name="drawer_option_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?selectableItemBackground</item>
    </style>
    <style name="Widget.Theme.StarcitizenLite.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.StarcitizenLite.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="Heading" parent="Base.TextAppearance.AppCompat.Body2">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>
    <style name="Label" parent="Base.TextAppearance.AppCompat.Caption">
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">@dimen/padding</item>
    </style>
    <style name="DiscreteSeekBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">-5dp</item>
        <item name="dsb_scrubberHeight">3dp</item>
        <item name="dsb_progressColor">@color/colorAccent</item>
        <item name="dsb_indicatorColor">@color/colorAccent</item>
    </style>

    <style name="Label.Subtitle" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">italic</item>
    </style>
</resources>